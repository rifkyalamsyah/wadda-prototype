<section class='countdown-container'>
  <div class='days-container'>
    <div class='days'></div>
    <div class='days-label'>Hari</div>
  </div>

  <div class='hours-container'>
    <div class='hours'></div>
    <div class='hours-label'>Jam</div>
  </div>

  <div class='minutes-container'>
    <div class='minutes'></div>
    <div class='minutes-label'>Menit</div>
  </div>

  <div class='seconds-container'>
    <div class='seconds'></div>
    <div class='seconds-label'>Detik</div>
  </div>
</section>

<style>
  .countdown-container {
    display: flex;
    justify-content: space-between;
    gap: 1rem;
    margin-top: 1rem;
    margin-bottom: 1rem;
  }

  .days-container,
  .hours-container,
  .minutes-container,
  .seconds-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: var(--brown-200);
    border: 1px solid var(--brown-300);
    width: 140px;
    height: 140px;
    border-radius: 24px;
  }

  .days,
  .hours,
  .minutes,
  .seconds {
    font-size: 2.5em;
    margin: 10px 0;
    color: var(--brown-600);
  }

  .days-label,
  .hours-label,
  .minutes-label,
  .seconds-label {
    text-transform: capitalize;
    margin-bottom: 5px;
    color: var(--brown-900);
  }

  @media (max-width: 800px) {
    .countdown-container {
      max-width: 95%;
    }

    .days-container,
    .hours-container,
    .minutes-container,
    .seconds-container {
      font-size: 1rem;
      width: 100px;
      height: 100px;
      border-radius: 12px;
    }
  }
</style>
